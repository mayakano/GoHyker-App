<% stylesheet_link_tag 'application' %>

<section class="user">
  <div class="sign-up-forms user_options-forms" id="user_options-forms">
    <div class="user_forms-login" style="display:block;">

      <h2 class="forms_title">Sign Up</h2>
      <%= form_for @user, class: "forms_form" do |f| %>
        <fieldset class="forms_fieldset">
        <div class="forms_field" style="display:block;">
            <% if @user.errors.any? %>
              <div class="error_messages">
                <h2>Form is invalid</h2>
                <ul>
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="forms_field" >
              <%= f.label :email %><br />
              <%= f.text_field :email, class:'forms_signup-input', placeholder:'Email' %>
            </div>
            <div class="forms_field">
              <%= f.label :password %><br />
              <%= f.password_field :password, class:'forms_signup-input', placeholder:'Password' %>
            </div>
            <div class="forms_field">
              <%= f.label :password_confrmation %><br />
              <%= f.password_field :password_confirmation, class:'forms_signup-input', placeholder:'Password Confirmation' %>
            </div>
            <div class=" actions" style="color:white;"><%= f.submit "Sign Up", class: 'forms_buttons-action' %></div>
          </div>
        </fieldset>
      <% end %>
    </div>
  </div>
</section>


<script>
  $('.forms_buttons-action').removeAttr('data-disable-with');
</script>
